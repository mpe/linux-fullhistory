config 83xx
	bool "PowerQUICC II Pro (83xx) Support"
	depends on 6xx

menu "Freescale 83xx options"
	depends on 83xx

choice
	prompt "Machine Type"
	depends on 83xx
	default MPC834x_SYS

config MPC834x_SYS
	bool "Freescale MPC834x SYS"
	help
	  This option enables support for the MPC 834x SYS evaluation board.

endchoice

config MPC834x
	bool
	depends on MPC834x_SYS
	default y

config PPC_GEN550
	bool
	depends on 83xx
	default y

endmenu
