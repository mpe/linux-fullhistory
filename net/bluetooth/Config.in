#
# Bluetooth subsystem configuration
#

if [ "$CONFIG_NET" != "n" ]; then

   mainmenu_option next_comment
   comment 'Bluetooth support'
   dep_tristate 'Bluetooth subsystem support' CONFIG_BT $CONFIG_NET

   if [ "$CONFIG_BT" != "n" ]; then
      dep_tristate 'L2CAP protocol support' CONFIG_BT_L2CAP $CONFIG_BT
      dep_tristate 'SCO links support' CONFIG_BT_SCO $CONFIG_BT
      source net/bluetooth/rfcomm/Config.in
      source net/bluetooth/bnep/Config.in
      source drivers/bluetooth/Config.in
   fi

   endmenu
fi

